                  label تندرج تحت قسم
                  br 
                  label.radio-inline
                    input#js_radio(type='radio', name='department')
                    | عامة  
                  label.radio-inline
                    input#radio(type='radio', name='department')
                    | خاصة
                  label.radio-inline
                    input#radio(type='radio', name='department')
                    | كﻻهما
                #department_select
                  label تندرج تحت قسم
                  select.form-control.selectpicker#department_iddepartment(name="DepartmentId", data-live-search="true", data-size=5)
