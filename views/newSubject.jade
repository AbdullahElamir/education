extends layout
block authenticationStyle
block content
block cPanel
  .container.font

    .form-group      
      input(id="fff" ,type="checkbox", checked="", data-toggle="toggle") 
    .row
      .col-md-10
        form#newSubject(action="", method="post", accept-charset="utf-8", role="form")
          legend  تسجيل المواد
            .pull-left
              a.btn.btn-primary(href='/subjects', role='button')
                span.glyphicon.glyphicon-th-list
                span  عرض المواد
          
          h4.text-center بيانات المادة - Data Subject
          hr
          .form-group
            .row
              .col-xs-3.col-md-3
                label
                  i.fa.fa-star-o
                  span  اسم المادة
                input#subject_name.form-control(type="text", name="subject_name", placeholder="اسم المادة")
              .col-xs-3.col-md-3
                label
                  i.fa.fa-star-o
                label.pull-left subjectName
                input#subject_name_en.form-control(type="text", name="subject_name_en", placeholder="subjectName", dir="ltr")    
               
              .col-xs-3.col-md-3
                label
                  span  عدد وحدات النظري
                input#no_th_unit.form-control(type="text", name="no_th_unit", placeholder="عدد وحدات النظري")
              .col-xs-3.col-md-3
                label
                  span  عدد ساعات النظري
                input#no_th_hour.form-control(type="text", name="no_th_hour", placeholder="عدد ساعات النظري")
          .form-group
            .row
              .col-xs-3.col-md-3
                label  رمز المادة
                input#cod.form-control(type="text", name="cod", placeholder="رمز المادة")
              .col-xs-3.col-md-3
                label نوع المادة
                input#sub_type.form-control(type="text", name="sub_type", placeholder="نوع المادة")
              .col-xs-3.col-md-3
                label عدد وحات العملي
                input#no_pr_unit.form-control(type="text", name="no_pr_unit", placeholder="عدد وحات العملي")
              .col-xs-3.col-md-3
                label عدد ساعات العملي
                input#no_pr_hour.form-control(type="text", name="no_pr_hour", placeholder="عدد ساعات العملي")
          .form-group
            .row
              .col-xs-3.col-md-3
                label أعمال السنة
                input#chapter_degree.form-control(type="text", name="chapter_degree", placeholder="أعال السنة")
              .col-xs-3.col-md-3
                label نهائي النظري
                input#final_theor.form-control(type="text", name="final_theor", placeholder="نهائي النظري")
              .col-xs-3.col-md-3
                label نهائي العملي
                input#final_practical.form-control(type="text", name="final_practical", placeholder="نهائي العملي")
              .col-xs-3.col-md-3
                label تندرج تحت قسم
                select.form-control.selectpicker#department_iddepartment(name="DepartmentId", data-live-search="true", data-size=5)
                  option(value="", style='color:grey; display:none;') اختر اسم القسم...
                    option(value="عام")
          .form-group 
            .row
              .col-xs-6.col-md-4.col-md-offset-4
                label 
                  i.fa.fa-star-o
                  span  المواد التمهيدية
                select.form-control.selectpicker#subject_id(name="SubjectId", data-live-search="true", data-size=5)
                  option(value="", style='color:grey; display:none;') اختر اسم المواد...
       
          hr
          .col-xs-2.col-xs-offset-4.col-md-2.col-md-offset-5
            button.btn.btn-primary.btn-lg(type="submit")
              | تسجيل - Register
    br
    br
