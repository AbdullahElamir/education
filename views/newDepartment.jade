extends layout
block authenticationStyle
block content
block cPanel
  .container.font
    .row
      .col-md-6.col-md-offset-2
        form.form#newDepartment(action="/newDepartment", method="post", accept-charset="utf-8", role="form")
          legend  إضافة قسم جديد
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 اسم القسم
            .col-xs-6.col-md-5.col-md-offset-1
              input.form-control#name(type="text", name="name", placeholder="اسم القسم")
          br
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 Department name
            .col-xs-6.col-md-5.col-md-offset-1
              input.form-control#name_en(type="text", name="name_en", placeholder="Department name", dir="ltr")
          br
          hr
          .col-xs-2.col-xs-offset-5.col-md-2.col-md-offset-5
            button.btn.btn-primary.btn-lg(type="submit")
              | إضافة
  script(src='/js/jquery-2.1.1.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/jquery.validate.min.js')
  script(src='/js/bootstrap-notify.min.js')
  script(src='/js/newDepartment.js')