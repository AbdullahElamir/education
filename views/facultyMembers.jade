extends layout
block authenticationStyle
block errorStyle
block content
block cPanel
  .container
    .row
      .col-md-10
        .btn-group.btn-breadcrumb
          a.btn.btn-default(href="/cPanel")
            i.glyphicon.glyphicon-home
          .btn.btn-default المحاضرين
          .btn.btn-default.active عرض المحاضرين
        br
        br
        .panel.panel-default
          .panel-heading
            .row
              .pull-right(style="margin-right: 10px;")
                h3#h3.panel-title عرض المحاضرين
              .col-xs-6.col-md-7
                .input-group
                  input.form-control(type='text', placeholder='بحث...')
                  .input-group-btn
                    button.btn.btn-default
                      i.glyphicon.glyphicon-search
              .pull-left(style="margin-left: 10px;")
                a.btn.btn-success(href='/newFacultyMember', role='button',data-toggle='modal')
                  span.glyphicon.glyphicon-plus
                  span.text-none  إضافة محاضر/ة
              .pull-left(style="margin-left: 10px;")
                a.btn.btn-primary(href='#', role='button',data-toggle='modal')
                  span.glyphicon.glyphicon-print
                  span.text-none  طباعة
          .table-responsive
            table#mytable.table.table-bordred.table-striped.text-right
              thead
                th اسم المحاضر/ة
                th المؤهل العلمي
                th التخصص
                th الجنس
                th القسم
                th الجنسية
                th.text-center تعديل
                th.text-center إلغاء
              tbody#tbody
                for faculty_Member in faculty_Members
                  tr(data-id="#{faculty_Member.id}",data-name="#{faculty_Member.name}",data-qualification="#{faculty_Member.qualification}",data-specialization="#{faculty_Member.specialization}",data-DepartmentId="#{faculty_Member.DepartmentId}",data-gender="#{faculty_Member.gender}",data-phone="#{faculty_Member.phone}",data-physical_address="#{faculty_Member.physical_address}",data-place_birth="#{faculty_Member.place_birth}",data-birth_date="'#{faculty_Member.birth_date}'",data-nationality="#{faculty_Member.nationality}")
                    td #{faculty_Member.name}
                    td #{faculty_Member.qualification}
                    td #{faculty_Member.specialization}
                    td
                      if faculty_Member.gender == 1
                        | أنثى
                      else
                        | ذكر
                    td #{faculty_Member.Department.name}
                    td 
                      for nat in nationalityJade
                        if nat.id == faculty_Member.nationality
                          |  #{nat.name}
                    td.text-center
                      p(data-placement="top", data-toggle="tooltip", title="تعديل")
                        button#editt.btn.btn-primary.btn-xs(value="#{faculty_Member.id}",data-toggle="modal", data-target="#edit")
                          span.glyphicon.glyphicon-pencil
                    td.text-center
                      p(data-placement="top", data-toggle="tooltip", title="إلغاء")
                        button#Deletee.btn.btn-danger.btn-xs(value='#{faculty_Member.id}',data-title="Deletee", data-toggle="modal", data-target="#delete")
                          span.glyphicon.glyphicon-trash
        if pagination
          .text-center
            ul.pagination
              li(class='#{pagination.previous.disabled}')
                a(href='?p=#{pagination.previous.n.}') السابق
              for page in pagination.pages
                li(class="#{page.active}")
                  a(href='?p=#{page.n}') #{page.n}
              li(class="#{pagination.next.disabled}")
                a(href='?p=#{pagination.next.n}') التالي  
  #edit.modal.fade.font(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog
      form.form#updateFacultyMember(role="form" , action="/updateFacultyMember/", method="post")
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-hidden="true")
              span.glyphicon.glyphicon-remove(aria-hidden="true")
            h4#Heading.modal-title.custom_align تعديل محاضر/ة
          .modal-body
            .form-group
              .row
                .col-xs-6.col-md-6
                  label اسم المحاضر/ة
                  input#name.form-control(type="text", name="name", placeholder="اسم المحاضر/ة")
                .col-xs-6.col-md-6
                  label المؤهل العلمي
                  input#qualification.form-control(type="text", name="qualification", placeholder="المؤهل العلمي")
            .form-group
              .row
                .col-xs-6.col-md-6
                  label القسم
                  select#departmentId.form-control.selectpicker.show-tick(name="departmentId", data-live-search="true", data-size=5)
                    for dept in depts
                      option(value="#{dept.id}",data-name="#{dept.name}") #{dept.name}
                      
                .col-xs-6.col-md-6
                  label التخصص
                  input#specialization.form-control(type="text", name="specialization", placeholder="التخصص")
            .form-group
              .row
                .col-xs-6.col-md-6
                  label الجنس
                  select.form-control.selectpicker.show-tick#gender(name="gender")
                    option(value="0") ذكر
                    option(value="1") انثي
                .col-xs-6.col-md-6
                  label الجنسية
                  select.form-control.selectpicker#nationality(name="nationality", data-live-search="true", data-size=5)
                    for nat in nationalityJade
                      option(value="#{nat.id}") #{nat.name}
                    
            .form-group
              .row
                .col-xs-6.col-md-6
                  label تاريخ الميلاد
                  .input-group.date#birth_date
                    input.form-control(type="text", name="birth_date", placeholder="تاريخ الميلاد")
                    span.input-group-addon.success
                      span.fa.fa-calendar
                .col-xs-6.col-md-6
                  label مكان الميلاد
                  input.form-control#place_birth(name="place_birth", type="text", placeholder="مكان الميلاد")
            .form-group
              .row
                .col-xs-6.col-md-6
                  label عنوان اﻹقامة
                  input#physical_address.form-control(type="text", name="physical_address", placeholder="عنوان اﻹقامة")
                .col-xs-6.col-md-6
                  label رقم الهاتف
                  input.form-control#phone(name="phone", type="text", placeholder="رقم الهاتف")
                  input#id_faculty_Member(name="id" , type="hidden")
          .modal-footer
            button.btn.btn-warning.btn-lg(type="submit", style="width: 100%;")
              span.glyphicon.glyphicon-ok-sign
              |  تعديل
  


  #delete.modal.fade.font(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true")
            span.glyphicon.glyphicon-remove(aria-hidden="true")
          h4#Heading.modal-title.custom_align إلغء شعبة
        .modal-body
          .alert.alert-danger
            span.glyphicon.glyphicon-warning-sign
            |  هل انت متأكد من إلغاء هذه الشعبة؟
        .modal-footer
          button#ok.btn.btn-success(type="button", data-dismiss="modal")
            span.glyphicon.glyphicon-ok-sign
            |  نعم
          button.btn.btn-default(type="button", data-dismiss="modal")
            span.glyphicon.glyphicon-remove
            |  لا
      // /.modal-content
    // /.modal-dialog
  script(src='/js/jquery-2.1.1.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/jquery.validate.min.js')
  script(src='/js/newFacultyMember.js')
  script(src='/js/facultiMembers.js')
  script(src='/js/backToTop.js')
  script(src='/js/bootstrap-select.min.js')
  script(src='/js/moment-with-locales.min.js')
  script(src='/js/bootstrap-datetimepicker.min.js')
  script.
    $(document).ready(function(){
      $("#mytable #checkall").click(function () {
        if ($("#mytable #checkall").is(':checked')) {
          $("#mytable input[type=checkbox]").each(function () {
            $(this).prop("checked", true);
          });
        } 
        else {
          $("#mytable input[type=checkbox]").each(function () {
            $(this).prop("checked", false);
          });
        }
      });
      $("[data-toggle=tooltip]").tooltip();
      $('#birth_date').datetimepicker({
        useCurrent: false,
        viewMode: 'years',
        format: 'YYYY-MM-DD',
        locale: 'ar-sa'
      });
    });