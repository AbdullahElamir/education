block cPanel
  .container.font
    .row
      .col-md-10
        form.form(action="", method="post", accept-charset="utf-8", role="form")
          legend  تسجيل طالب/ة جديد
            .pull-left  Register new student
          h4.text-center بيانات اسم الطالب / Data student's name
          .row 
            .input-group(style="margin: 10px;")
              label.input-group-addon اسم الطالب/ة
              input.form-control#first_name(name="first_name", type="text", placeholder="اسم الطالب/ة")
              span.input-group-addon(style="border-left: 0; border-right: 0;") اسم اﻷب
              input.form-control#father_name(name="father_name", type="text", placeholder="اسم اﻷب")
              span.input-group-addon(style="border-left: 0; border-right: 0;") اسم الجد
              input.form-control#grand_name(name="grand_name", type="text", placeholder="اسم الجد")
              span.input-group-addon(style="border-left: 0; border-right: 0;") اللقب
              input.form-control#last_name(name="last_name", type="text", placeholder="اللقب")
          .row
            .input-group(style="margin: 10px;")
              input.form-control#last_namelast_name_en(name="last_name_en", type="text", placeholder="Surname", dir="ltr")
              label.input-group-addon Surname
              input.form-control#grand_name_en(name="grand_name_en", type="text", placeholder="Grandfather Name", dir="ltr")
              span.input-group-addon(style="border-left: 0; border-right: 0;") Grandfather Name
              input.form-control#father_name_en(name="father_name_en", type="text", placeholder="Father Name", dir="ltr")
              span.input-group-addon(style="border-left: 0; border-right: 0;") Father Name
              input.form-control#first_name_en(name="first_name_en", type="text", placeholder="Student Name", dir="ltr")
              label.input-group-addon Student Name
          hr
          h4.text-center البيانات الاساسية / Basic information
          .row 
            .input-group(style="margin: 10px;")
              label.input-group-addon اسم اﻷم
              input.form-control#mother_name(name="mother_name", type="text", placeholder="اسم اﻷم")
              .input-group-addon(style="padding: 0px;width: 0px;")
              input.form-control#mother_name_en(name="mother_name_en", type="text", placeholder="Mother Name", dir="ltr")
              span.input-group-addon(style="border-left: 10%; border-right: 0;") Mother Name
              span.input-group-addon(style="border-left: 0; border-right: 0;") مكان الميلاد
              input.form-control#place_birth(name="place_birth", type="text", placeholder="مكان الميلاد")
              span.input-group-addon(style="border-left: 0; border-right: 0;") تاريخ الميلاد
              input.form-control#birth_date(name="birth_date", type="date", placeholder="تاريخ الميلاد")
