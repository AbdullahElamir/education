          .row
            .input-group(style="margin: 10px;")
              label.h4.input-group-addon الجنسية
              select.form-control.selectpicker#nationality(name="nationality",title="الرجاء اختيار الجنسية  .",style="padding-top: 0px;",data-live-search="true")
                option(value="0") جنسية1
                option(value="1") جنسية2
              span.input-group-addon(style="border-left: 0; border-right: 0;") الجنس
              select.form-control.selectpicker#gender(name="gender",title="أختر الجنس  .",style="padding-top: 0px;")
                option(value="0") ذكر
                option(value="1") انثي
              span.input-group-addon(style="border-left: 0; border-right: 0;") رقم ورقة العائلة
              input.form-control#no_paper_family(name="no_paper_family", type="text", placeholder="رقم ورقة العائلة")
              span.input-group-addon(style="border-left: 0; border-right: 0;") رقم قيد العائلة
              input.form-control#no_reg_family(name="no_reg_family", type="text", placeholder="رقم قيد العائلة")
          hr
          h4.text-center البيانات الثانوية / Secondary data
          .row
            .input-group(style="margin: 10px;")
              label.input-group-addon عنوان اﻹقامة
              input.form-control#physical_address(name="physical_address", type="text", placeholder="عنوان اﻹقامة")
              span.input-group-addon(style="border-left: 0; border-right: 0;") السجل المدني
              input.form-control#civil_reg(name="civil_reg", type="text", placeholder="السجل المدني")
              span.input-group-addon(style="border-left: 0; border-right: 0;") رقم الهاتف
              input.form-control#phone(name="phone", type="text", placeholder="رقم الهاتف")
              span.input-group-addon(style="border-left: 0; border-right: 0;") مكان عمل اﻷب
              input.form-control#father_work_place(name="father_work_place", type="text", placeholder="مكان عمل اﻷب")
          .row
            .input-group(style="margin: 10px;")
              label.input-group-addon اخر شهادة
              input.form-control#last_cert(name="last_cert", type="text", placeholder="عنوان اﻹقامة")
              span.input-group-addon(style="border-left: 0; border-right: 0;") تخصيص اخر شهادة
              input.form-control#cust_last_cert(name="cust_last_cert", type="text", placeholder="تخصيص اخر شهادة")
              span.input-group-addon(style="border-left: 0; border-right: 0;") تاريخ الحصول علي الشهادة
              input.form-control#date_cert(name="date_cert", type="date", placeholder="")
          .row
            .input-group(style="margin: 10px;")
              label.input-group-addon مكان الحصول علي الشهادة
              input.form-control#place_cert(name="place_cert", type="text", placeholder="مكان الحصول علي الشهادة")
              span.input-group-addon(style="border-left: 0; border-right: 0;") رقم الجلوس
              input.form-control#set_number(name="set_number", type="text", placeholder="رقم الجلوس")
              span.input-group-addon(style="border-left: 0; border-right: 0;") معدل الطالب
              input.form-control#student_rate(name="student_rate", type="text", placeholder="معدل الطالب")
              span.input-group-addon(style="border-left: 0; border-right: 0;") الرقم الوطني
              input.form-control#nid(name="nid", type="text", placeholder="الرقم الوطني")
          hr
        .col-xs-2.col-xs-offset-5.col-md-2.col-md-offset-5
          button.btn.btn-primary.btn-lg(type="submit")
            | تسجيل / Register
