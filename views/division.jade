  script(src='/js/jquery-2.1.1.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/backToTop.js')
  script(src='/js/bootstrap-toggle.min.js')
  script.
    $(document).ready(function(){
      $("#form2").hide();
      $('#toggleForm').change(function() {
        if ($(this).prop('checked') == true) {
          $("#form1").hide().addClass("fadeOut").removeClass("fadeIn");
          $("#form2").show().addClass("fadeIn").removeClass("fadeOut");
        }
        else {
          $("#form1").show().addClass("fadeIn").removeClass("fadeOut");
          $("#form2").hide().addClass("fadeOut").removeClass("fadeIn");
        }      
      });
    });