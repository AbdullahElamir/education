extends layout
block authenticationStyle
block errorStyle
block content
block cPanel
  .container
    .row
      .col-md-10
        .btn-group.btn-breadcrumb
          a.btn.btn-default(href="/cPanel")
            i.glyphicon.glyphicon-home
          .btn.btn-default تنزيل المواد
          .btn.btn-default.active عرض الطلبة
        .pull-left(style="margin-left: 15px;")
          a.btn.btn-success(href='/transcript/studentData/', role='button',data-toggle='modal')
            i.fa.fa-arrow-left
            span  رجوع   
   
        br
        br
        br
        .row 
          .pull-left.btn-group(role='group', aria-label='...')
            button#Department_bt.btn.btn-default(type='button',style="color:#337AB7;") عرض المواد القسم
              span.glyphicon.glyphicon-pencil 
            |   
            button#Division_bt.btn.btn-default(type='button',style="color:#337AB7;") عرض المواد الشعبة
              span.glyphicon.glyphicon-pencil
            |   
            button#generale_bt.btn.btn-default(type='button',style="color:#337AB7;") عرض المواد العامة
              span.glyphicon.glyphicon-pencil 
        br 
        .row       
          .col-md-7    
            .panel.panel-default
              .panel-heading
                .row
                  .pull-right(style="margin-right: 10px;")
                    h3#h3.panel-title تنزيل مواد ..
              .table-responsive
                table#mytable.table.table-bordred.table-striped.text-right
                  thead
                    th اسم المادة
                    th Subject Name
                    th رمز المادة
                    th.text-center أضافة الدرجة
                    th.text-center حذف
                  tbody
                    for re in res
                      if re.Sub_group.Subject != null
                        tr(data-id = '#{re.id}')
                          td #{re.Sub_group.Subject.name}
                          td #{re.Sub_group.Subject.name_en}
                          td #{re.Sub_group.Subject.code}
                          td.text-center
                            p(data-placement="top", data-toggle="tooltip", title="تعديل")  
                              a.btn.btn-primary.btn-xs(value="",data-title="Delete", data-toggle="modal", data-target="#Show_Semester")
                                span.glyphicon.glyphicon-eye-open
                          td.text-center
                            p(data-placement="top", data-toggle="tooltip", title="حذف")  
                              button.btn.btn-danger.btn-xs(value="",data-title="Delete", data-toggle="modal", data-target="#Descargar_material")
                                span.glyphicon.glyphicon-trash
          .col-md-5.pull-left   
            #Department_teble  
              .panel.panel-default
                .panel-heading
                  .row
                    .pull-right(style="margin-right: 10px;")
                      h3#h3.panel-title عرض المواد القسم  
                    .col-xs-6.col-md-6
                      .input-group
                        input.form-control(type='text', placeholder='بحث...')
                        .input-group-btn
                          button.btn.btn-default
                            i.glyphicon.glyphicon-search    
                          
                  .table-responsive
                    table#mytable.table.table-bordred.table-striped.text-right
                      thead
                        th اسم المادة
                        th رمز المادة
                        th.text-center إضافة
                      tbody
                        for d in dept
                          tr(data-id = '#{d.id}')
                            td #{d.Subject.name}
                            td #{d.Subject.code}
                            td.text-center
                              p(data-placement="top", data-toggle="tooltip", title="إضافة")
                                button#adAc.btn.btn-success.btn-xs(value="#{d.id}",data-title="Edit", data-toggle="modal", data-target="#add")
                                  span.glyphicon.glyphicon-hand-right                   
            #generale_teble
              .panel.panel-default
                .panel-heading
                  .row
                    .pull-right(style="margin-right: 10px;")
                      h3#h3.panel-title عرض المواد العامة 
                    .col-xs-6.col-md-6
                      .input-group
                        input.form-control(type='text', placeholder='بحث...')
                        .input-group-btn
                          button.btn.btn-default
                            i.glyphicon.glyphicon-search     
                      
                  .table-responsive
                    table#mytable.table.table-bordred.table-striped.text-right
                      thead
                        th اسم المادة
                        th رمز المادة
                        th.text-center إضافة
                      tbody
                        for g in gen
                          tr(data-id = '#{g.id}')
                            td #{g.Subject.name}
                            td #{g.Subject.code}
                            td.text-center
                              p(data-placement="top", data-toggle="tooltip", title="إضافة")
                                button#adAc.btn.btn-success.btn-xs(value="#{g.id}",data-title="Edit", data-toggle="modal", data-target="#add")
                                  span.glyphicon.glyphicon-hand-right              

            #Division_teble
              .panel.panel-default
                .panel-heading
                  .row
                    .pull-right(style="margin-right: 10px;")
                      h3#h3.panel-title عرض المواد الشعبة
                    .col-xs-6.col-md-6
                      .input-group
                        input.form-control(type='text', placeholder='بحث...')
                        .input-group-btn
                          button.btn.btn-default
                            i.glyphicon.glyphicon-search     
                      
                  .table-responsive
                    table#mytable.table.table-bordred.table-striped.text-right
                      thead
                        th اسم المادة
                        th رمز المادة
                        th.text-center إضافة
                      tbody
                        for di in div
                          tr(data-id = '#{di.id}')
                            td #{di.Subject.name}
                            td #{di.Subject.code}
                            td.text-center
                              p(data-placement="top", data-toggle="tooltip", title="إضافة")
                                button#adAc.btn.btn-success.btn-xs(value="#{di.id}",data-title="Edit", data-toggle="modal", data-target="#add")
                                  span.glyphicon.glyphicon-hand-right
  #Show_Semester.modal.fade.font(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog
      form.form(action="#", method="post",accept-charset="utf-8", role="form")
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-hidden="true")
              span.glyphicon.glyphicon-remove(aria-hidden="true")
            h4#Heading.modal-title.custom_align تعديل فصل دراسي
          .modal-body
            .form-group
              .row
                .col-xs-6.col-md-6
                  lable أعمال السنة
                  input.form-control#chapter_degree(type="text", name="chapter_degree", value="", placeholder="أعمال السنة")
                .col-xs-6.col-md-6 
                  lable درجة النهائي
                  input.form-control#final_exam(type="text", name="final_exam", value="", placeholder="درجة النهائي")
          .modal-footer
            button.btn.btn-primary.btn-lg(type="button", style="width: 100%;")
              span.glyphicon.glyphicon-ok-sign   

  #add.modal.fade.font(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true")
            span.glyphicon.glyphicon-remove(aria-hidden="true")
          h4#Heading.modal-title.custom_align تنزيل مواد
        .modal-body
          form#addForm.form-signin(role="form")
            .form-group
              .row
                .col-xs-6.col-md-6
                  lable أعمال السنة
                  input.form-control#chapter(type="text", name="chapter_degree", value="0", placeholder="أعمال السنة")
                .col-xs-6.col-md-6 
                  lable درجة النهائي
                  input.form-control#final(type="text", name="final_exam", value="0", placeholder="درجة النهائي")
            .form-group
              .row
                .col-xs-6.col-md-6
                  lable حالة المادة
                  input(type="hidden",name="StudentId",value="#{sem.StudentId}")
                  select.form-control.selectpicker(name="subject_status", data-live-search="true", data-size=5)
                    option(value="1", selected) تنزيل  
                    option(value="2") إضافة
                    option(value="3") إسقاط
                .col-xs-6.col-md-6
                  lable التقدير 
                  input(type="hidden",name="SemesterStudentId",value="#{sem.id}")
                  select.form-control.selectpicker(name="result_case", data-live-search="true", data-size=5)
                    option(value="", style='color:grey; display:none;') اختر التقدير...
                    option(value="1") ممتاز  
                    option(value="2") جيد جدا
                    option(value="3") جيد
                    option(value="4") مقبول  
                    option(value="5") ضعيف
                    option(value="6") ضعيف جدا
                  input#subG(type="hidden",name="SubGroupId",value="")
        .modal-footer
          button#submit.btn.btn-primary.btn-lg(type="button", style="width: 100%;")
            span.glyphicon.glyphicon-ok-sign                               




