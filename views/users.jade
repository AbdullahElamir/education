extends layout
block authenticationStyle
block content
block cPanel
  .container.font
    .row
      .col-md-10
        legend  عرض المستخدمين
        .table-responsive
          table#mytable.table.table-bordred.table-striped.text-right
            thead
              th
                input#checkall(type="checkbox")
              th اسم المستخدم
              th البريد الالكتروني
              th الرقم السري
              th رقم الهاتف
              th.text-center تعديل
              th.text-center الغاء
            tbody
              tr
                td
                  input.checkthis(type="checkbox")
                td فاروق
                td fa2999@yahoo.com
                td 12345
                td 092456347
                td.text-center
                  p(data-placement="top", data-toggle="tooltip", title="Edit")
                    button.btn.btn-primary.btn-xs(data-title="Edit", data-toggle="modal", data-target="#edit")
                      span.glyphicon.glyphicon-pencil
                td.text-center
                  p(data-placement="top", data-toggle="tooltip", title="Delete")
                    button.btn.btn-danger.btn-xs(data-title="Delete", data-toggle="modal", data-target="#delete")
                      span.glyphicon.glyphicon-trash
          .clearfix
          ul.pagination.pull-right
            li.disabled
              a(href="#")
                span.glyphicon.glyphicon-chevron-right
            li.active
              a(href="#") 1
            li
              a(href="#") 2
            li
              a(href="#") 3
            li
              a(href="#") 4
            li
              a(href="#") 5
            li
              a(href="#")
                span.glyphicon.glyphicon-chevron-left
  #edit.modal.fade.font(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true")
            span.glyphicon.glyphicon-remove(aria-hidden="true")
          h4#Heading.modal-title.custom_align تعديل المستخدم
        .modal-body
          .form-group
            input.form-control(type="text", placeholder="الاسم")
          .form-group
            input.form-control(type="text", placeholder="البريد الالكتروني")
          .form-group
            input.form-control(type="text", placeholder="الرقم السري")
          .form-group
            input.form-control(type="text", placeholder="رقم الهاتف")
        .modal-footer
          button.btn.btn-warning.btn-lg(type="button", style="width: 100%;")
            span.glyphicon.glyphicon-ok-sign
            |  تعديل
      // /.modal-content
    // /.modal-dialog
  #delete.modal.fade.font(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true")
            span.glyphicon.glyphicon-remove(aria-hidden="true")
          h4#Heading.modal-title.custom_align إلغء المستخدم
        .modal-body
          .alert.alert-danger
            span.glyphicon.glyphicon-warning-sign
            |  هل انت متأكد من إلغاء هذه المستخدم؟
        .modal-footer
          button.btn.btn-success(type="button")
            span.glyphicon.glyphicon-ok-sign
            |  نعم
          button.btn.btn-default(type="button", data-dismiss="modal")
            span.glyphicon.glyphicon-remove
            |  لا
      // /.modal-content
    // /.modal-dialog
  script(src='/js/jquery-1.11.2.min.js')
  script(src='/js/bootstrap.min.js')
  script.
    $(document).ready(function(){
      $("#mytable #checkall").click(function () {
        if ($("#mytable #checkall").is(':checked')) {
            $("#mytable input[type=checkbox]").each(function () {
              $(this).prop("checked", true);
            });
        } else {
            $("#mytable input[type=checkbox]").each(function () {
                $(this).prop("checked", false);
            });
          }
      });
        $("[data-toggle=tooltip]").tooltip();
    });