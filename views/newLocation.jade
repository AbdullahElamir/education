extends layout
block authenticationStyle
block content
block cPanel
  .container.font
    .row
      .col-md-6.col-md-offset-2
        form.form(action="/newLocation", method="post", accept-charset="utf-8", role="form")
          legend  إضافة قاعة جديدة
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 اسم القاعة
            .col-xs-6.col-md-4.col-md-offset-1
              input.form-control#name(type="text", name="name", placeholder="اسم القاعة")
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 كمية استعاب الطلبة
            .col-xs-6.col-md-4.col-md-offset-1
              input.form-control#quantity(type="text", name="quantity", placeholder="كمية استعاب الطلبة")
          hr
          .col-md-2.col-md-offset-5
            button.btn.btn-primary.btn-lg(type="submit")
              | إضافة
  script(src='/js/jquery-1.11.2.min.js')
  script(src='/js/bootstrap.min.js')