extends layout
block authenticationStyle
block content
block cPanel
  .container.font
    .row
      .col-md-6.col-md-offset-2
        form.form#newLocation(action="/newLocation", method="post", accept-charset="utf-8", role="form")
          legend  إضافة قاعة جديدة
            .pull-left
              a.btn.btn-primary(href='/locations', role='button')
                span.glyphicon.glyphicon-th-list
                span  عرض القاعات الدراسية
          .form-group
            .row
              .col-xs-6.col-md-6
                label.h4 اسم القاعة
                input.form-control#name(type="text", name="name", placeholder="اسم القاعة")
              .col-xs-6.col-md-6
                label.h4 كمية استعاب الطلبة
                input.form-control#quantity(type="text", name="quantity", placeholder="كمية استعاب الطلبة")
          br
          hr
          .col-xs-2.col-xs-offset-5.col-md-2.col-md-offset-5
            button.btn.btn-primary(type="submit")
              | إضافة
    br
    br
  script(src='/js/jquery-2.1.1.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/backToTop.js')