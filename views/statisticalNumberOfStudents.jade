extends layout
block authenticationStyle
block errorStyle
block content
  .container
    .row
      .col-md-6
        .pull-right
          .btn-group.btn-breadcrumb
              a.btn.btn-default(href="/cPanel")
                i.glyphicon.glyphicon-home
              .btn.btn-default.active طباعة تقرير عن الخريجين 
      br
      br
      br
      .col-md-6.col-md-offset-2
        form.form#reportForm(action="", method="", accept-charset="utf-8", role="form")
          legend  احصائية بالطلبة الخريجين
              
          .form-group
            .row
              .col-xs-6.col-md-offset-3
                label.h4 الفصل الدراسي لسنة
                select.form-control.selectpicker#semester(name="semester", data-live-search="true", data-size=5)
                  option(value="", style='color:grey; display:none;') اختر الفصل الدراسي ...
                  for s in sem
                    option(value="#{s.id}") #{s.year.getFullYear()} 
                      if s.sem_type==1
                        |ربيع
                      else if s.sem_type==2 
                        |خريف
                      else if s.sem_type==3
                        |صيف

          br
          hr
          .form-group
            .row
              .col-xs-4.col-xs-offset-1.col-md-4.col-md-offset-2
                button#normal.btn.btn-primary(target="_blank", type="button")
                  i.fa.fa-eye
                  span  عرض الطلبة 
              .col-xs-4.col-md-4
                button#csv.btn.btn-primary(target="_blank", type="button")
                  i.fa.fa-eye
                  span  عرض الطلبة(csv) 
            
  script(src='/js/jquery-2.1.1.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/bootstrap-select.min.js')
  script(src='/js/jquery.validate.min.js')
  script(src='/js/bootstrap-notify.min.js')
  script(src='/js/backToTop.js')
  script(src='/js/helpers.js')
  script(src='/js/statisticalNumberOfStudents.js')
