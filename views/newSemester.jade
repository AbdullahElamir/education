extends layout
block authenticationStyle
block errorStyle
block content
block cPanel
  .container
    .row
      .pull-right
        .btn-group.btn-breadcrumb
          a.btn.btn-default(href="/cPanel")
            i.glyphicon.glyphicon-home
          .btn.btn-default اﻷنظمة الدراسية
          .btn.btn-default.active إضافة نظام دراسي
      .col-md-6.col-md-offset-2
        br
        form.form#newSemester(action="/semester/newSemester", method="post", accept-charset="utf-8", role="form")
          legend  إضافة نظام دراسي
            .pull-left
              a.btn.btn-primary(href='/semester', role='button')
                span.glyphicon.glyphicon-th-list
                span  عرض اﻷنظمة الدراسية
          .form-group
            .row
              .col-xs-6.col-md-6
                label.h4 نظام الدراسة
                select.form-control.selectpicker#sem_type(name="sem_type")
                  option(value="", style='color:grey; display:none;') اختر النظام الدراسي...
                  option(value="0") سنة
                  option(value="1") فصل
              .col-xs-6.col-md-6#system_type
                label.h4 الفصل الدراسي
                select.form-control.system_type.selectpicker(name="system_type")
                  option(value="", style='color:grey; display:none;') اختر الفصل الدراسي...
                  option(value="1") ربيعي
                  option(value="2") خريفي
                  option(value="3") صيفي
          .form-group
            .row
              .col-xs-6.col-md-6
                label.h4 يبدأ النظام الدراسي
                .input-group.date#starting_date
                  input.form-control(type="text", name="starting_date", placeholder="تاريخ بداية النظام الدراسي")
                  span.input-group-addon.success
                    span.fa.fa-calendar
              .col-xs-6.col-md-6
                label.h4 ينتهي النظام الدراسي
                .input-group.date#ending_date
                  input.form-control(type="text", name="ending_date", placeholder="تاريخ نهاية النظام الدراسي")
                  span.input-group-addon.success
                    span.fa.fa-calendar
          .form-group
            .row
              .col-xs-6.col-md-6
                label.h4 سنة النظام  الدراسي
                .input-group.date#year
                  input.form-control(name="year",type="text", placeholder="سنة النظام الدراسي")
                  span.input-group-addon.success
                    span.fa.fa-calendar
              .col-xs-6.col-md-6
                label.h4(style="font-size:17.1px") هل هذا هو النظام الدراسي الحالي 
                select.form-control.selectpicker(name="current",style="padding-top: 0px;")
                  option(value="", style='color:grey; display:none;') اختر الاجابة بنعم او لا...
                  option(value="1") نعم
                  option(value="2") لا 
          hr
          .col-xs-2.col-xs-offset-5.col-md-2.col-md-offset-5
            button.btn.btn-primary(type="submit")
              i.fa.fa-plus
              span  إضافة
    br
    br
  script(src='/js/jquery-2.1.1.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/bootstrap-select.min.js')
  script(src='/js/moment-with-locales.min.js')
  script(src='/js/bootstrap-datetimepicker.min.js')
  script(src='/js/jquery.validate.min.js')
  script(src='/js/bootstrap-notify.min.js')
  script(src='/js/newSemester.js')
  script(src='/js/backToTop.js')
  script.
    $(function () {
      $('#year').datetimepicker({
        useCurrent: false,
        viewMode: 'years',
        format: 'YYYY'
      });
      $('#starting_date, #ending_date').datetimepicker({
        useCurrent: false,
        viewMode: 'years',
        format: 'YYYY-MM-DD',
        locale: 'ar-sa'
      });
    });