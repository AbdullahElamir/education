extends layout
block authenticationStyle
block content
block cPanel
  .container.font
    .row
      .col-md-6.col-md-offset-2
        form.form(action="r", method="post", accept-charset="utf-8", role="form")
          legend  إضافة شعبة جديدة
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 اسم الشعبة
            .col-xs-6.col-md-4.col-md-offset-1
              input.form-control#name(type="text", name="name", placeholder="اسم القسم")
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 Division Name
            .col-xs-6.col-md-4.col-md-offset-1
              input.form-control#name_en(type="text", name="name_en", placeholder="Division Name")
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 تندرج تحت قسم
            .col-xs-6.col-md-4.col-md-offset-1
              select.form-control.selectpicker#department_iddepartment(title="اختر اسم القسم...",name="department_iddepartment",data-live-search="true")
                option قسم1
                option قسم2
                option قسم3
          hr
          button.btn.btn-lg.btn-primary.btn-block(type="submit")
            | إضافة
  script(src='/js/jquery-1.11.2.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/bootstrap-select.min.js')