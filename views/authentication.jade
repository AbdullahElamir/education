extends layout
block errorStyle
block cPanel-and-navbarCPanal-style
block navBar
block navcPanel
block cPanel
block footer
block content
  .container.font
    .row
      .col-md-6.col-md-offset-3
        .panel.panel-login
          .panel-heading
            .row
              .col-xs-6
                a#loginFormLink.active(href="#") دخول
              .col-xs-6
                a#registerFormLink(href="#") تسجيل
            hr
          .panel-body
            .row
              .col-lg-12
                form#loginForm(action="", method="post", role="form", style="display: block;")
                  .form-group.text-center
                    input#username.form-control(type="text", name="username", tabindex="1", placeholder="اسم المستخدم")
                  .form-group.text-center
                    input#password.form-control(type="password", name="password", tabindex="2", placeholder="كلمة المرور")
                  .form-group.text-center
                    input#remember(type="checkbox", tabindex="3", name="remember")                    
                    | 
                    label(for="remember")  ذكرني
                  .form-group
                    .row
                      .col-lg-12
                        .text-center
                          input#loginSubmit.form-control.btn.btn-login(type="submit", name="login-submit", tabindex="4", value="تسجيل الدخول")
                  .form-group
                    .row
                      .col-lg-12
                        .text-center
                          a#forgetFormLink.forgot-password(href="#", tabindex="5") هل نسيت كلمة المرور؟
                form#registerForm(action="", method="post", role="form", style="display: none;")
                  .form-group.text-center
                    input#username.form-control(type="text", name="username", tabindex="1", placeholder="اسم المستخدم", value="")
                  .form-group.text-center
                    input#email.form-control(type="email", name="email", tabindex="1", placeholder="البريد الالكتروني", value="")
                  .form-group.text-center
                    input#password.form-control(type="password", name="password", tabindex="2", placeholder="كلمة المرور")
                  .form-group.text-center
                    input#confirmPassword.form-control(type="password", name="confirmPassword", tabindex="2", placeholder="تأكيد كلمة المرور")
                  .form-group
                    .row
                      .col-lg-12
                        .text-center
                          input#register-submit.form-control.btn.btn-register(type="submit", name="register-submit", tabindex="4", value="سجل الان")
                form#forgetForm(action="", method="post", role="form", style="display: none;")
                  .col-xs-12#form-heder !استعادة كلمة المرور
                  .form-group
                    .row
                      .col-xs-12
                        .text-center
                          input#email.form-control(type="text", name="email", tabindex="1", placeholder="ادخل البريد الالكتروني")
                  .form-group
                    .row
                      .col-lg-12
                        .text-center
                          input#forgetSubmit.form-control.btn.btn-danger(type="submit", name="forget-submit", tabindex="2", value="استعادة")
  script(src='/js/jquery-1.11.2.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/jquery.validate.min.js')
  script(src='/js/authentication.js')