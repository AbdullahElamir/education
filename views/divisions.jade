extends layout
block authenticationStyle
block content
block cPanel
  .container.font
    .row
      .col-md-10
        legend  عرض الشعب
        .table-responsive
          table#mytable.table.table-bordred.table-striped.text-right
            thead
              th
                input#checkall(type="checkbox")
              th اسم الشعبة
              th Division Name
              th تحت اسم القسم
              th Under Department Name
              th تعديل
              th الغاء
            tbody
              tr
                td
                  input.checkthis(type="checkbox")
                td 17 فبراير
                td A
                td شاغر
                td C
                td
                  p(data-placement="top", data-toggle="tooltip", title="تعديل")
                    button.btn.btn-primary.btn-xs(data-title="Edit", data-toggle="modal", data-target="#edit")
                      span.glyphicon.glyphicon-pencil
                td
                  p(data-placement="top", data-toggle="tooltip", title="إلغاء")
                    button.btn.btn-danger.btn-xs(data-title="Delete", data-toggle="modal", data-target="#delete")
                      span.glyphicon.glyphicon-trash
              tr
                td
                  input.checkthis(type="checkbox")
                td شهيد الواجب
                td B
                td غير شاغر
                td V
                td
                  p(data-placement="top", data-toggle="tooltip", title="Edit")
                    button.btn.btn-primary.btn-xs(data-title="Edit", data-toggle="modal", data-target="#edit")
                      span.glyphicon.glyphicon-pencil
                td
                  p(data-placement="top", data-toggle="tooltip", title="Delete")
                    button.btn.btn-danger.btn-xs(data-title="Delete", data-toggle="modal", data-target="#delete")
                      span.glyphicon.glyphicon-trash
          .clearfix
          ul.pagination.pull-right
            li.disabled
              a(href="#")
                span.glyphicon.glyphicon-chevron-right
            li.active
              a(href="#") 1
            li
              a(href="#") 2
            li
              a(href="#") 3
            li
              a(href="#") 4
            li
              a(href="#") 5
            li
              a(href="#")
                span.glyphicon.glyphicon-chevron-left
  #edit.modal.fade.font(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true")
            span.glyphicon.glyphicon-remove(aria-hidden="true")
          h4#Heading.modal-title.custom_align تعديل شعبة
        .modal-body
          .form-group
            input.form-control(type="text", placeholder="Mohsin")
          .form-group
            input.form-control(type="text", placeholder="Irshad")
          .form-group
            textarea.form-control(rows="2", placeholder="CB 106/107 Street # 11 Wah Cantt Islamabad Pakistan")
        .modal-footer
          button.btn.btn-warning.btn-lg(type="button", style="width: 100%;")
            span.glyphicon.glyphicon-ok-sign
            |  تعديل
      // /.modal-content
    // /.modal-dialog
  #delete.modal.fade.font(tabindex="-1", role="dialog", aria-labelledby="edit", aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-hidden="true")
            span.glyphicon.glyphicon-remove(aria-hidden="true")
          h4#Heading.modal-title.custom_align إلغء شعبة
        .modal-body
          .alert.alert-danger
            span.glyphicon.glyphicon-warning-sign
            |  هل انت متأكد من إلغاء هذه الشعبة؟
        .modal-footer
          button.btn.btn-success(type="button")
            span.glyphicon.glyphicon-ok-sign
            |  نعم
          button.btn.btn-default(type="button", data-dismiss="modal")
            span.glyphicon.glyphicon-remove
            |  لا
      // /.modal-content
    // /.modal-dialog
  script(src='/js/jquery-1.11.2.min.js')
  script(src='/js/bootstrap.min.js')
  script.
    $(document).ready(function(){
      $("#mytable #checkall").click(function () {
        if ($("#mytable #checkall").is(':checked')) {
            $("#mytable input[type=checkbox]").each(function () {
              $(this).prop("checked", true);
            });
        } else {
            $("#mytable input[type=checkbox]").each(function () {
                $(this).prop("checked", false);
            });
          }
      });
        $("[data-toggle=tooltip]").tooltip();
    });