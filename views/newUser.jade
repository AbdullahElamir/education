extends layout
block authenticationStyle
block content
block cPanel
  .container
    .row
      .col-md-6.col-md-offset-2
        form.form(action="newDivision", method="post", accept-charset="utf-8", role="form")
          legend  إضافة مستخدم جديد
            .pull-left
              a.btn.btn-primary(href='/users', role='button')
                span.glyphicon.glyphicon-th-list
                |  عرض المستخدمين
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 اسم المستخدم
            .col-xs-6.col-md-5.col-md-offset-1
              input.form-control#name(type="text", name="name", placeholder="اسم المستخدم")
          br
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 البريد الالكتروني
            .col-xs-6.col-md-5.col-md-offset-1
              input.form-control#emil(type="text", name="emil", placeholder="البريد الالكتروني")
          br
          .row
            .col-xs-6.col-md-5.col-md-offset-1
              label.h4 تأكيد البريد الالكتروني
            .col-xs-6.col-md-5
              input.form-control#confirm_emil(type="text", name="confirm_emil", placeholder="تأكيد البريد الالكتروني")
          br
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 الرقم السري
            .col-xs-6.col-md-5.col-md-offset-1
              input.form-control#password(type="password", name="password", placeholder="الرقم السري", style="line-height:23px;")
          br
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 تأكيد الرقم السري
            .col-xs-6.col-md-5.col-md-offset-1
              input.form-control#confirm_password(type="password", name="confirm_password", placeholder="تأكيد الرقم السري", style="line-height:23px;")
          br
          .row
            .col-xs-6.col-md-4.col-md-offset-1
              label.h4 رقم الهاتف
            .col-xs-6.col-md-5.col-md-offset-1
              input.form-control#phone(type="text", name="phone", placeholder="رقم الهاتف")          
          hr
          .col-xs-2.col-xs-offset-5.col-md-2.col-md-offset-5
            button.btn.btn-primary(type="submit")
              span.glyphicon.glyphicon-plus
              |  إضافة
    br
  script(src='/js/jquery-2.1.1.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/backToTop.js')
  script(src='/js/bootstrap-select.min.js')