extends layout
block authenticationStyle
block content
block cPanel
  .container
    .row
      .col-md-6.col-md-offset-2
        form#newFacultyMember(action="", method="post", accept-charset="utf-8", role="form")
          legend  إضافة محاضر/ة جديد
            .pull-left
              a.btn.btn-primary(href='/facultyMembers', role='button')
                span.glyphicon.glyphicon-th-list
                span  عرض المحاضرين
          .form-group
            .row
              .col-xs-6.col-md-6
                label اسم المحاضر/ة
                input#name.form-control(type="text", name="name", placeholder="اسم المحاضر/ة")
              .col-xs-6.col-md-6
                label المؤهل العلمي
                input#qualification.form-control(type="text", name="qualification", placeholder="المؤهل العلمي")
          .form-group
            .row
              .col-xs-6.col-md-6
                label القسم
                select.form-control.selectpicker#department_iddepartment(name="department_iddepartment", data-live-search="true", data-size=5)
                  option(value="", style='color:grey; display:none;') الرجاء اختيار القسم...
                  option(value="0") قسم1
                  option(value="1") قسم2
              .col-xs-6.col-md-6
                label التخصص
                input#specialization.form-control(type="text", name="specialization", placeholder="التخصص")
          .form-group
            .row
              .col-xs-6.col-md-6
                label الجنس
                select.form-control.selectpicker#gender(name="gender")
                  option(value="", style='color:grey; display:none;') الرجاء اختيار الجنس...
                  option(value="0") ذكر
                  option(value="1") انثي
              .col-xs-6.col-md-6
                label الجنسية
                select.form-control.selectpicker#nationality(name="nationality", data-live-search="true", data-size=5)
                  option(value="", style='color:grey; display:none;') الرجاء اختيار الجنسية...
                  option(value="0") جنسية1
                  option(value="1") جنسية2
          .form-group
            .row
              .col-xs-6.col-md-6
                label تاريخ الميلاد
                input#birth_date.form-control(type="text", name="birth_date", placeholder="تاريخ الميلاد")
              .col-xs-6.col-md-6
                label مكان الميلاد
                input.form-control#phone(name="phone", type="text", placeholder="مكان الميلاد")
          .form-group
            .row
              .col-xs-6.col-md-6
                label عنوان اﻹقامة
                input#physical_address.form-control(type="text", name="physical_address", placeholder="عنوان اﻹقامة")
              .col-xs-6.col-md-6
                label رقم الهاتف
                input.form-control#phone(name="phone", type="text", placeholder="رقم الهاتف")
          hr
          .col-xs-2.col-xs-offset-5.col-md-2.col-md-offset-5
            button.btn.btn-primary(type="submit")
              | إضافة
  script(src='/js/jquery-2.1.1.min.js')
  script(src='/js/bootstrap.min.js')
  script(src='/js/backToTop.js')
  script(src='/js/bootstrap-select.min.js')
  script(src='/js/moment-with-locales.min.js')
  script(src='/js/bootstrap-datetimepicker.min.js')
  script.
    $(function () {
      $('#birth_date').datetimepicker({
        viewMode: 'years',
        format: 'DD-MM-YYYY',
        locale: 'ar-sa'
      });
    });